- content_for(:title, 'Sign Up')

.container
	%legend Sign Up For An Account
	= form_for @new_user, url: users_path do |f|
		= f.label :name
		= f.text_field :name
		%br
		= f.label :email
		= f.text_field :email
		%br
		Password:
		= f.password_field :password
		Confirm Password:
		= f.password_field :password_confirmation
		%br
		= f.submit "Sign Up"